<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <title>@ViewBag.Title - Web Bán Đồng Hồ</title>
    <link rel="stylesheet" href="~/Content/Css/main.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <nav>
        <section>
            <div class="navbar navbar-expand-xl navbar-light bg-light">
                <div class="logo">
                    @*Hien thi logo bằng class navbar-brand*@
                    <a class="navbar-brand " href="https://localhost:44358/Watch/Index"><img class="icon-custom" src="~/Content/images/logo.png" /></a>
                    <ul class="navbar-nav">
                        <li class="nav-item ">
                            <a class="nav-link" href="https://localhost:44358/Watch/Index">Giới Thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" @Html.ActionLink("Đồng Hồ Nam", "DongHoNam", "Watch", new { area = "" }, new { @class = "nav-link" })</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" @Html.ActionLink("Đồng Hồ Nữ", "DongHoNu", "Watch", new { area = "" }, new { @class = "nav-link" })</a>
                        </li>
                        <li>
                            <a class="nav-link" @Html.Partial("~/Views/GioHang/GioHangPartial.cshtml", new { area = "" })</a>
                        </li>
                    </ul>
                    <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                        @Html.Partial("_LoginPartial")
                    </div>

                </div>
            </div>
        </section>
    </nav>
    @using (Html.BeginForm("Search", "Find", FormMethod.Get))
    {
        <div class="form-group">
            @Html.TextBox("ProductName", null, new { @class = "form-control", placeholder = "Nhập từ khóa tìm kiếm" })
        </div>
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    <div class="footer-basic">
        <footer>
            <div class="social"><a href="#"><i class="icon ion-social-instagram"></i></a><a href="#"><i class="icon ion-social-snapchat"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a><a href="#"><i class="icon ion-social-facebook"></i></a></div>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Home</a></li>
                <li class="list-inline-item"><a href="#">Services</a></li>
                <li class="list-inline-item"><a href="#">About</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
            </ul>
            <p class="copyright">Company Name © 2018</p>
        </footer>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("upload", required: false)
</body>
</html>
