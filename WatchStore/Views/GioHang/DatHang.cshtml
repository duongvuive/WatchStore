@model IEnumerable<WatchStore.Models.GioHang>

@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kiểm tra lại thông tin đặt hàng</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDWatch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameWatch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iSoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThanhTien)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDWatch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameWatch)
            </td>
            <td>
                <img src="@item.Image" width="200" />
            </td>
            < @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @id = item.IDWatch }))
            {
                <td>
                    @String.Format("{0:0,0}", item.Price) VND
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.iSoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThanhTien)
                </td>
            }
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>*@
        </tr>
    }
    <tr style="font-weight:bold; text-align:left;color:red">
        <td colspan="2"> Số loại đồng hồ: @ViewBag.Tongsoluongsanpham</td>
        <td colspan="2"> Số lượng đồng hồ: @ViewBag.Tongsoluong</td>
        <td colspan="4"> Tổng tiền: @String.Format("{0:0,0}", @ViewBag.Tongtien) VNĐ</td>
    </tr>
    <tr style="font-weight:bold;text-align:right">
        <td colspan="6">@Html.ActionLink("Xác nhận đơn hàng", "Xacnhandonhang", "GioHang")</td>
    </tr>
    <tr style="font-weight:bold;text-align:right">
        <td colspan="6">@Html.ActionLink("Trở về giỏ hàng", "Giohang", "GioHang")</td>
    </tr>
</table>




